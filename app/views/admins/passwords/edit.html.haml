.container
  .row.align-items-center
    .col-12.col-md-6.offset-xl-2.offset-md-1.order-md-2.mb-5.mb-md-0
      .text-center
        %img.img-fluid{alt: "...", src: "/img/illustrations/happiness.svg"}/
    .col-12.col-md-5.col-xl-4.order-md-1.my-5
      %h1.display-4.text-center.mb-3
        Change your password
      %p.text-muted.text-center.mb-5
      = render "admins/shared/error_messages", resource: resource
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.hidden_field :reset_password_token
        .form-group
          %label.form-label
            Password
          .input-group.input-group-merge
            = f.password_field :password, autocomplete: "current-password", class: "form-control form-control-appended"
            .input-group-append
              %span.input-group-text
                %i.fe.fe-eye
        .form-group
          %label.form-label
            Password Confirm
          .input-group.input-group-merge
            = f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control form-control-appended"
            .input-group-append
              %span.input-group-text
                %i.fe.fe-eye
        = button_tag(type: 'submit', class: "btn btn-lg w-100 btn-primary mb-3") do
          Change my password
        = render "admins/shared/links"