= form_with(model: package, local: true) do |form|
  - if package.errors.any?
    #error_explanation
      %h2
        = pluralize(package.errors.count, "error")
        prohibited this style from being saved:
      %ul
        - package.errors.full_messages.each do |message|
          %li= message
  .form-group
    = form.label "Package Name"
    = form.text_field :name, class: "form-control"
  
  .form-group
    = form.label "Description"
    = form.rich_text_area :description, class: "form-control"
  
  .form-group
    = form.label "Price"
    = form.number_field :price, min: 0, class: "form-control"  
  
  .form-group
    = form.label "Duration Type"
    = form.select :duration_type, [['Daily', 'daily'], ['Monthly', 'monthly'], ['Yearly', 'yearly']], {prompt: "Select Duration Type"}, {class: "form-control", required: true}
  
  .form-group
    = form.label "Duration Span"
    = form.number_field :duration_span, min: 0, class: "form-control"
  
  .form-group
    .form-check.form-switch
      = form.check_box :trial, class: "form-check-input", id: "flexSwitchCheckDefault"
      %label.form-check-label{for: "flexSwitchCheckDefault"} Trial
  
  .form-group
    .form-check.form-switch
      = form.check_box :enable, class: "form-check-input", id: "flexSwitchCheckDefault1"
      %label.form-check-label{for: "flexSwitchCheckDefault1"} Enable    
  .actions
    = form.submit class: "btn btn-primary"