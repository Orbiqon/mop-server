
.header
  .container-fluid
    .header-body
      .row.align-items-end
        .col
          %h6.header-pretitle
            Overview
          %h1.header-title
            Styles
        .col-auto
          = link_to 'New Style', new_style_path, class: "btn btn-outline-primary"  
.container-fluid
  .row.justify-content-md-center
    .col-12
      .card
        
        .card-body
          
          %table.table.table-striped.table-bordered#example
            - if @styles.any?  
              %thead
                %tr
                  %th{scope: "col"} Name
                  %th{scope: "col"} Status
                  %th{scope: "col"} Action
              %tbody
                - @styles.each do |style|
                  %tr
                    %td= style.name
                    %td= boolean_to_text( style.status )
                    %td.text-right
                      -# = link_to 'Show', style, class: "btn btn-outline-success btn-sm"
                      = link_to 'Edit', edit_style_path(style), class: "btn btn-outline-info btn-sm"
            - else
              = render 'shared/no_data'
