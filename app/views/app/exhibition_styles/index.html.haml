
.header
  .container-fluid
    .header-body
      .row.align-items-end
        .col
          %h6.header-pretitle
            Overview
          %h1.header-title
            Exhibition Styles
        .col-auto
          = link_to 'New Exhibition Style', new_exhibition_style_path, class: "btn btn-outline-primary"  
.container-fluid
  .row.justify-content-md-center
    .col-12
      .card
        .card-header
          .row.align-items-center
            .col
              = render 'search', q: @q
            .col-auto
        .card-body
          .table-responsive
            %table.table.table-sm.table-nowrap.datatable
              - if @exhibition_styles.any?  
                %thead
                  %tr
                    %th{scope: "col"} Name
                    %th{scope: "col"} Status
                    %th{scope: "col"} Action
                %tbody
                  - @exhibition_styles.each do |style|
                    %tr
                      %td= style.name
                      %td= boolean_to_text( style.status )
                      %td.text-right
                        -# = link_to 'Show', style, class: "btn btn-outline-success btn-sm"
                        = link_to 'Edit', edit_exhibition_style_path(style), class: "btn btn-outline-info btn-sm"
              - else
                = render 'shared/no_data'
